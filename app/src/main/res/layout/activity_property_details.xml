<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PropertyDetailsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <ImageView
            android:id="@+id/imageView_property_detail"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:src="@drawable/maison"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_property_info"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:background="@color/white"
            app:cardCornerRadius="8dp"

            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView_property_detail">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView_property_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10sp"
                    android:layout_marginTop="10sp"
                    android:text="Appartement"
                    android:textAllCaps="true"
                    android:textColor="@color/royalBlue"

                    android:textSize="17sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView_property_place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"

                    android:text="2promenade louis lachenal, 74000 Annecy"
                    android:textColor="@color/dark"


                    android:textSize="14sp"

                    app:layout_constraintStart_toStartOf="@+id/textView_property_type"
                    app:layout_constraintTop_toBottomOf="@+id/textView_property_type" />


                <TextView
                    android:id="@+id/textView_number_rooms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="4 rooms"
                    android:textColor="@color/dark"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/textView_property_place"
                    app:layout_constraintTop_toBottomOf="@+id/textView_property_place" />

                <TextView
                    android:id="@+id/textView_property_surface"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:text="58 mÂ²"
                    android:textColor="@color/dark"
                    android:textSize="15sp"

                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/textView_number_rooms"
                    app:layout_constraintStart_toEndOf="@+id/textView_number_rooms"
                    app:layout_constraintTop_toTopOf="@+id/textView_number_rooms" />

                <TextView
                    android:id="@+id/textView_property_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="300 000$"
                    android:textColor="@color/red"
                    android:textSize="23sp"
                    android:textStyle="bold"

                    app:layout_constraintBottom_toBottomOf="@+id/textView_property_type"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.80"
                    app:layout_constraintStart_toEndOf="@+id/textView_property_type"
                    app:layout_constraintTop_toTopOf="@+id/textView_property_type" />


                <TextView
                    android:id="@+id/textView_property_online_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="mis en ligne le 14/02/2021"
                    android:textColor="@color/lightGrey"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="@+id/textView_property_place"
                    app:layout_constraintTop_toBottomOf="@+id/textView_number_rooms" />

                <TextView
                    android:id="@+id/textView_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Descriptif du bien"
                    android:textColor="@color/dark"
                    android:textSize="23sp"

                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/textView_property_online_date"
                    app:layout_constraintTop_toBottomOf="@+id/textView_property_online_date" />

                <TextView
                    android:id="@+id/textView_bedroom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/corner_round"
                    android:padding="3dp"
                    android:text="4 chambres"
                    android:textColor="@color/deepBlue"
                    android:textStyle="bold"

                    android:layout_marginTop="15dp"
                    app:drawableStartCompat="@drawable/ic_baseline_king_bed_24"
                    app:layout_constraintStart_toStartOf="@+id/textView_description"
                    app:layout_constraintTop_toBottomOf="@+id/textView_description" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/corner_round"
                    android:padding="3dp"
                    android:text="1 salle de bain"
                    android:textColor="@color/deepBlue"
                    android:textStyle="bold"

                    app:drawableStartCompat="@drawable/ic_baseline_bathtub_24"
                    app:layout_constraintStart_toEndOf="@+id/textView_bedroom"
                    app:layout_constraintTop_toTopOf="@+id/textView_bedroom" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView_bedroom" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>