<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="title_string">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="hint_string">
        <item name="android:textColorHint">@color/dark</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="choice_chip" parent="@style/Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/deepBlue</item>
        <item name="chipCornerRadius">5dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="little_choice_chip" parent="@style/Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/deepBlue</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/deepBlue</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

</resources>
